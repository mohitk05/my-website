---
layout: main.njk
---
<link rel="stylesheet" href="/css/highlight.css" />
<style>
main {
	margin-bottom: 30px;
}
.tag {
	color: salmon;
	cursor: pointer;
}
.tag:hover {
	opacity: 0.8;
}
.topic:after {
	content: ","
}
.topic:last-child:after {
	content: ""
}
p code {
	color: salmon;
	background: rgba(255,238,238, 0.8);
	padding: 2px 5px;
}
table {
    border: solid 1px #ccc;
    border-collapse: collapse;
    border-spacing: 0;
	margin: 10px 0;
	font-size: 0.9em;
	width: 100%;
}
table thead th {
    background-color: #eee;
    border: solid 1px #ccc;
    padding: 10px;
    text-align: left;
}
table tbody td {
    border: solid 1px #ccc;
    color: #333;
    padding: 10px;
}
.content {
	line-height: 1.8;
}
.content img {
	max-width: 100%;
}
.content code {
	cursor: text;
}
.coverImage {
{% if coverImageHeight %}
	height: {{ coverImageHeight }};
{% else %}
	height: 400px;
{% endif %}
{% if coverImagePosition %}
	background-position: {{ coverImagePosition }};
{% endif %}
{% if coverImageSize %}
	background-size: {{ coverImageSize }};
{% else %}
	background-size: cover;
{% endif %}
	background-repeat: no-repeat;
}
blockquote {
	background: #efe;
	padding: 0 10px;
	margin: 0;
}
@media only screen and (max-width: 768px) {
	.coverImage {
		height: 200px;
	}
}
body.dark {
	background: #121212;
	color: #fdfdfd;
}
body.dark a {
	color: salmon;
}
body.dark p code {
	background: #2f2f2f;
}
body.dark blockquote {
	background: #222;
	border: 2px solid #000;
}
body.dark td {
	color: #ccc;
}
body.dark th {
	background: #333;
}
</style>
<main>
	<span style="display: flex; justify-content: space-between">
		<span>
			<a href="/">home</a>
			<span>/</span>
			<a href="/posts">all posts</a>
			<span>/</span>
			<span>here</span>
		</span>
		<span style="display: flex; align-items: center;">
			<input type="checkbox" onclick="toggleDark()" id="dark-mode" style="margin-right: 5px">
			<code>dark</code>
		</span>
	</span>
	<h1 class="title">{{ title }}</h1>
	<span>
		<em>{{ page.date | dateReadable }}</em>
		•
		{% for tag in tags %}
			<a href="/posts?tag={{tag}}" class="tag">{{ tag }}</a>
		{% endfor %}
		{% if topics and topics.length %}
			•
			{% for topic in topics %}
				<span class="topic">{{ topic }}</span>
			{% endfor %}
		{% endif %}
	</span>
	<br/>
	{% if coverImage %}
		<br/>
		<div class="coverImage" style="background-image: url('{{ coverImage }}')"></div>
	{% endif %}
	<div class="content">{{ content | safe }}</div>
    <hr class="container"/>
	<div class="profile">
        <div class="topRow">
            <div class="profileImage"></div>
            <div>
                <h1 class="name">Mohit Karekar</h1>
                <p class="shortBio">Software Engineer | JavaScript | Open Source</p>
            </div>
        </div>
    </div>
	<script src="https://utteranc.es/client.js"
        repo="mohitk05/my-website"
        issue-term="pathname"
        theme="github-light"
        crossorigin="anonymous"
		label="blog-comment"
        async>
    </script>
	<script>
		window.addEventListener('load', () => {
			if(sessionStorage.__dark == 1) {
				var dark = document.getElementById('dark-mode');
				dark.checked = true;
				toggleDark();
			}
		})
		function toggleDark() {
			var dark = document.getElementById('dark-mode');
			var utter = document.querySelector('.utterances-frame');
			var meta = document.querySelector('#tab-color');
			if(dark.checked) {
				sessionStorage.__dark = 1;
				document.body.className = document.body.className.length ? document.body.className + ' dark' : 'dark';
				utter.contentWindow.location.replace(utter.src.replace('github-light', 'github-dark'));
				let metaTag = document.createElement('meta');
				metaTag.id = 'tab-color';
				metaTag.name = 'theme-color';
				metaTag.content = '#222222';
				document.head.appendChild(metaTag);
			} else {
				sessionStorage.__dark = 0;
				document.body.className = document.body.className.replace(/\s*dark/, '');
				utter.contentWindow.location.replace(utter.src.replace('github-dark', 'github-light'));
				meta.parentNode.removeChild(meta);
			}
		}
	</script>
</main>