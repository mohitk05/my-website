		height: {{ coverImageHeight }};
	{% else %}
		height: 400px;
	{% endif %}
	{% if coverImagePosition %}
		background-position: {{ coverImagePosition }};
	{% endif %}
	{% if coverImageSize %}
		background-size: {{ coverImageSize }};
	{% else %}
		background-size: cover;
	{% endif %}
		background-repeat: no-repeat;
	}
